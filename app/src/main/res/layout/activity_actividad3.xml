<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- encabezado del Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="TeleAhorcado"
        android:titleTextColor="@android:color/white" />
    <TextView
        android:id="@+id/tvTema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tema"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="12dp"/>

    <!--espacio para las partes del cuerpo -->
    <FrameLayout
        android:layout_width="328dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">
        <!-- cabeza -->
        <ImageView
            android:id="@+id/ivAntena"
            android:layout_width="373dp"
            android:layout_height="301dp"
            android:layout_marginStart="-55dp"
            android:scaleType="fitCenter"
            android:src="@drawable/antenna" />


        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginStart="105dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/head1_sinfondo"
            android:visibility="invisible" />

        <!-- torso -->
        <ImageView
            android:id="@+id/ivTorso"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginStart="105dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/torso_sinfondo"
            android:visibility="invisible" />

        <!-- brazo izq -->
        <ImageView
            android:id="@+id/ivBrazoIzq"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginStart="130dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/brazoizq_piernadere_sinfondo"
            android:visibility="invisible" />

        <!-- brazo dere-->
        <ImageView
            android:id="@+id/ivBrazoDer"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginStart="70dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/brazodere_piernaizq_sinfondo"
            android:visibility="invisible" />

        <!--pierna izq -->
        <ImageView
            android:id="@+id/ivPiernaIzq"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="125dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/brazoizq_piernadere_sinfondo"
            android:visibility="invisible" />

        <!--pierna dere -->
        <ImageView
            android:id="@+id/ivPiernaDer"
            android:layout_width="20dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/brazodere_piernaizq_sinfondo"
            android:visibility="invisible" />
    </FrameLayout>


    <!--representación de la palabra oculta -->
    <TextView
        android:id="@+id/tvPalabra"
        android:text="- - - - -"
        android:textSize="28sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!-- boton de nuevo juego -->
    <Button
        android:id="@+id/btnNuevoJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="@string/nuevojuego" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <GridLayout
            android:id="@+id/gridLetras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="8"
            android:layout_gravity="center"

            android:padding="8dp"/>

    </ScrollView>

    <!-- Contador de comodines -->
    <TextView
        android:id="@+id/tvComodines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⭐ 0"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"/>

    <!-- Botón comodín, la idea era usar una imagen tambien que al presionarlo se efectue el comodin -->
    <ImageButton
        android:id="@+id/btnComodin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:contentDescription="Usar comodín"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"/>


</LinearLayout>
